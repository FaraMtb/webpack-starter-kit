{
  "name": "webpack-starter-kit",
  "version": "1.0.0",
  "description": "Lightweight starter kit for developing webpack project",
  "main": "index.ts",
  "scripts": {
    "lint": "npm run lint:styles npm run lint:scripts",
    "lint-and-fix": "npm run lint:styles npm run lint-and-fix:scripts",
    "lint:styles": "stylelint src",
    "lint:scripts": "eslint src --ext .ts",
    "lint-and-fix:scripts": "eslint src  --ext .ts --fix",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.prod.js",
    "start": "webpack serve --config webpack/webpack.config.dev.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FaraMtb/webpack-starter-kit.git"
  },
  "keywords": [
    "Webpack",
    "Starter",
    "Kit",
    "JavaScript",
    "Webdev",
    "TypeScript"
  ],
  "author": "Farai Mutambara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FaraMtb/webpack-starter-kit/issues"
  },
  "homepage": "https://github.com/FaraMtb/webpack-starter-kit#readme",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.1.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.1.1",
    "mini-css-extract-plugin": "^2.2.0",
    "node-sass": "^6.0.1",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@types/lodash": "^4.14.172",
    "core-js": "^3.16.1",
    "d3": "^7.0.0"
  }
}